<ul>
  {{#each comment}}
    <li class="comment">
      <article class="comment-body">
        <footer class="comment-meta">
          <div class="comment-author">
            <img alt="" src="{{this.avatar}}"/>
            <b class="fn">
              <a href="#" rel="external nofollow" class="url">
                {{this.user_name}}
              </a>
            </b>
            <span class="says">گفته:</span>
          </div>
          <!-- .comment-author -->

          <div class="comment-metadata">
            {{this.jalali_date}}
          </div><!-- .comment-metadata -->

          <!-- .comment-metadata -->

        </footer><!-- .comment-meta -->

        <div class="comment-content">
          <p>
            {{this.comment}}
          </p>
        </div><!-- .comment-content -->

        <div class="reply">
          <a rel="nofollow" class="comment-reply-link" href="#">پاسخ</a>
        </div>

        <div class="comment-metadata">
          {{this.user_url}}
        </div>
      </article><!-- .comment-body -->
      {{#if (hasChildren this.id)}}
        {{> comment/list comment=(getComment this.id)}}
      {{/if}}
    </li>
  {{/each}}<!-- #comment-## -->
</ul>