                    <h3>مطلب</h3>
                        {{#if errors}}
                        {{#each errors}}
                        <div class="alert alert-outline-secondary">
                        <p>{{this}}<p>
                        </div>
                        {{/each}}
                        {{/if}}

                        <div class="row">
                            <div class="col-lg-6 col-12 mb-30"><input class="form-control" type="text" name="title" value="{{post.title}}" placeholder="نام مطلب"></div>
                            <div class="col-lg-6 col-12 mb-30"><input class="form-control" type="text" name="slug" value="{{post.slug}}" placeholder="نامک"></div>
                            <div class="col-12 mb-30"><textarea class="form-control" name="content" placeholder="توضیحات محصول*">{{post.content}}</textarea></div>
                            <div class="col-lg-6 col-12 mb-30">
                        <div class="col-12  mb-15">
                            <select name="author" class="form-control">
                              
                                {{#each users}}
                                <option value={{this.id}}
                                {{#isPostAuthor this.id}}selected{{/isPostAuthor}}>{{this.ful_name}}</option>
                                {{/each}}

                            </select>
                        </div>
                        <div class="col-12  mb-15">
                                <h5>وضعیت مطلب</h5>
                        </div>
                    
                                <div class="col-12  mb-15">
                            <label for=""><input type="checkbox" name="status" value="0" {{#isPostStatus 0}}checked{{/isPostStatus}} > پیش نویس</label>
                            <label for=""><input type="checkbox" name="status" value="1" {{#isPostStatus 1}}checked{{/isPostStatus}}> درحال بازبینی</label>
