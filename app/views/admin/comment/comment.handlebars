<div class="content-body">

            <!-- Page Headings Start -->
            <div class="row justify-content-between align-items-center mb-10">

                <!-- Page Heading Start -->
                <div class="col-12 col-lg-auto mb-20">
                    <div class="page-heading">
                        <h3>دیدگاه ها</h3>
                    </div>
                </div><!-- Page Heading End -->

            </div><!-- Page Headings End -->

            <div class="row">

                <!--Manage Product List Start-->
                <div class="col-12">
                    <!-- Page Button Group Start -->
                <div class="col-12 col-lg-auto mb-20">
                    
                </div><!-- Page Button Group End -->

                    <div class="table-responsive">
                        <table class="table table-vertical-middle">
                                {{#each comments}}          
                            <thead>
                                <tr>
                                    <th>نویسنده</th>
                                    <th>دیدگاه</th>
                                    <th>درپاسخ</th>
                                    <th>انتشار شده</th>
                                </tr>
                            </thead>
                            <tbody class={{#isreject this.status}}{{/isreject}}>
                                <tr >
                                    <td>
                                    <div style="display:flex;" class="commenter">
                                      <div class="avatar mr-10 mb-20">
                                      <img src="{{this.gravatar}}">
                                      </div>
                                      <div class="name mr-10 mt-10">
                                      {{this.user_name}}
                                      </div>
                                    </div>

                                    </td>
                                    
                                    <td>{{this.comment}}</td>
                                    </div>
                                    <td>{{this.title}}</td>
                                    <td>{{this.created_at_persion}}</td>
                                    
                                    <td>
                                        <div class="table-action-buttons">
                                            <a class="edit button button-box button-xs button-info" href="/admin/comment/accept/{{this.id}}"><i class="zmdi zmdi-edit"></i></a>
                                            <a class="delete button button-box button-xs button-danger" href="/admin/comment/reject/{{this.id}}"><i class="zmdi zmdi-delete"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
                <!--Manage Product List End-->

            </div>

        </div>